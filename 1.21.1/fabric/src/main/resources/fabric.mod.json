{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${description}",
  "authors": [
    "${mod_author}"
  ],
  "contact": {
    "homepage": "${mod_source_url}",
    "issues": "${mod_issue_url}",
    "sources": "${mod_source_url}"
  },
  "license": "${license}",
  "icon": "${mod_id}.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "${group}.MainFabric"
    ],
    "client": [
      "${group}.client.FabricClient"
    ],
    "server": [
      "${group}.server.FabricServer"
    ]
  },
  "mixins": [
    "${mod_id}.mixins.json",
    "${mod_id}.fabric.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "fabric-api": ">=${fabric_version}",
    "minecraft": "${minecraft_version}",
    "java": ">=${java_version}",
    "gk1hcore": ">=${gk1hcore_version}",
    "accessorify": ">=${accessorify_version}",
    "accessories": ">=${accessories_version}"
  },
  "recommends": {
    "modmenu": ">=${modmenu_version}"
  },
  "suggests": {
    "netheriteextras": ">=${netheriteextras_version}",
    "reinfshulker": ">=${rsb_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/AwJvGzH"
      },
      "update_checker": true
    },
    "mc-publish": {
      "modrinth": "gk1h-accessorify+",
      "curseforge": "1394488",
      "dependencies": [
        "fabricloader@>=${fabric_loader_version}#(ignore)",
        "minecraft@${minecraft_version}#(ignore)",
        "java@>=${java_version}#(ignore)",
        "gk1hcore@>=${gk1hcore_version}(required){modrinth:gk1h-core}{curseforge:1384685}",
        "netheriteextras@>=${netheriteextras_version}(optional){modrinth:netherite-extras}{curseforge:1079904}",
        "reinfshulker@>=${rsb_version}(optional){modrinth:reinforced-shulker-boxes}{curseforge:529874}"
      ]
    }
  }
}